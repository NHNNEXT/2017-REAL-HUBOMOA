<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amigotrip.amigo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SignInActivity"
            android:theme="@style/SignInTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.NewPartyActivity" />
        <activity android:name=".activities.WelcomeActivity" />
        <activity android:name=".activities.PartiesActivity" />
        <activity android:name=".activities.SearchActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.IntroActivity" />
        <activity android:name=".activities.MessagesActivity" />
        <activity android:name=".activities.ChooseLangActivity" />
        <activity android:name=".activities.WebViewActivity" />
    </application>

</manifest>